<tr>
	<td>
    <% user = micropost.user %>
    <% if user.id == current_user.id %>
    <% else %>
    <div class="content"><%= link_to user.name,user %></div>
    <% end %>
    <div class="content"><%= warp(micropost.content) %></div>
    <div class="timestamp">发布于 <%= time_ago_in_words(micropost.created_at) %>前.</div>
  </td>
	<% if current_user?(micropost.user) %>
  <td><%= render "shared/delete", delete_object: micropost %></td>
	
	<% end %>
</tr>